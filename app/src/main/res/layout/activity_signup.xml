<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/signup_logo_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/signup_id_et"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textColorHint="@color/deep_gray"
        android:hint="아이디(이메일)"
        android:backgroundTint="@color/light_gray"
        android:textCursorDrawable="@color/primary"
        android:layout_marginTop="40dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/signup_logo_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/signup_amp_tv"/>
    <TextView
        android:id="@+id/signup_amp_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@id/signup_id_et"
        app:layout_constraintBottom_toBottomOf="@id/signup_id_et"
        app:layout_constraintStart_toStartOf="@id/signup_logo_tv"
        app:layout_constraintEnd_toEndOf="@id/signup_logo_tv"/>
    <EditText
        android:id="@+id/signup_id_adress_et"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:backgroundTint="@color/light_gray"
        android:textCursorDrawable="@color/primary"
        app:layout_constraintTop_toTopOf="@id/signup_id_et"
        app:layout_constraintBottom_toBottomOf="@id/signup_id_et"
        app:layout_constraintStart_toEndOf="@id/signup_amp_tv"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/signup_pw_et"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:hint="비밀번호"
        android:textColorHint="@color/deep_gray"
        android:backgroundTint="@color/light_gray"
        android:layout_marginTop="20dp"
        android:inputType="textPassword"
        android:textCursorDrawable="@color/primary"
        app:layout_constraintTop_toBottomOf="@id/signup_id_et"
        app:layout_constraintStart_toStartOf="@id/signup_id_et"
        app:layout_constraintEnd_toEndOf="@id/signup_id_adress_et"/>
    <ImageView
        android:id="@+id/signup_pw_hidebtn_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/btn_input_password"
        android:textCursorDrawable="@color/primary"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toTopOf="@id/signup_pw_et"
        app:layout_constraintBottom_toBottomOf="@id/signup_pw_et"
        app:layout_constraintEnd_toEndOf="@id/signup_pw_et" />

    <EditText
        android:id="@+id/signup_pw_confirm_et"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:hint="비밀번호 확인"
        android:textCursorDrawable="@color/primary"
        android:textColorHint="@color/deep_gray"
        android:backgroundTint="@color/light_gray"
        android:layout_marginTop="20dp"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/signup_pw_et"
        app:layout_constraintStart_toStartOf="@id/signup_id_et"
        app:layout_constraintEnd_toEndOf="@id/signup_id_adress_et"/>
    <ImageView
        android:id="@+id/signup_pw_confirm_hidebtn_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/btn_input_password"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toTopOf="@id/signup_pw_confirm_et"
        app:layout_constraintBottom_toBottomOf="@id/signup_pw_confirm_et"
        app:layout_constraintEnd_toEndOf="@id/signup_pw_confirm_et" />

    <TextView
        android:id="@+id/signup_signupbtn_tv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="가입완료"
        android:textSize="16sp"
        android:textAlignment="center"
        android:paddingTop="15dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@color/primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>