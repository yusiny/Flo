<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_chart_song_cv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:cardCornerRadius="7dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
    <ImageView
        android:id="@+id/item_chart_song_img_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/img_album_exp"

        /> </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/item_chart_song_lank_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="18sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/item_chart_song_cv"
        app:layout_constraintStart_toEndOf="@id/item_chart_song_cv"
        />
    <TextView
        android:id="@+id/item_chart_song_updown_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="20sp"
        android:textColor="#707070"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/item_chart_song_lank_tv"
        app:layout_constraintStart_toEndOf="@id/item_chart_song_cv"
        />
    <TextView
        android:id="@+id/item_chart_song_title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Butter"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@id/item_chart_song_lank_tv"
        app:layout_constraintStart_toEndOf="@id/item_chart_song_lank_tv"
        app:layout_constraintEnd_toStartOf="@id/item_chart_song_playbtn_iv"
        />
    <TextView
        android:id="@+id/item_chart_song_singer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="방탄소년단"
        android:textSize="14sp"
        android:textColor="#707070"
        app:layout_constraintTop_toBottomOf="@id/item_chart_song_title_tv"
        app:layout_constraintStart_toStartOf="@id/item_chart_song_title_tv"
        app:layout_constraintBottom_toBottomOf="@id/item_chart_song_cv"
        />
    <ImageView
        android:id="@+id/item_chart_song_playbtn_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/btn_miniplayer_play"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>