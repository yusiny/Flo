<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--상단-->
    <LinearLayout
        android:id="@+id/savedsongs_selectall_area_v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/savedsongs_selectall_btn_off_iv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/btn_playlist_select_off"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/savedsongs_selectall_btn_on_iv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/btn_playlist_select_on"
            android:visibility="gone" />

        <TextView
            android:id="@+id/savedsongs_selectall_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전체 선택"
            android:textColor="#666666"
            android:textSize="18sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/savedsongs_listenall_area_v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/savedsongs_selectall_area_v"
        app:layout_constraintTop_toTopOf="@id/savedsongs_selectall_area_v">

        <ImageView
            android:id="@+id/savedsongs_listenall_iv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_browse_arrow_right"
            android:visibility="visible" />

        <TextView
            android:id="@+id/savedsongs_listenall_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전체 듣기"
            android:textColor="#666666"
            android:textSize="18sp" />
    </LinearLayout>
    <TextView
        android:id="@+id/savedsongs_edit_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="편집"
        android:textColor="#666666"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/savedsongs_selectall_area_v"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>