<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
    <!--배경 이미지-->
    <ImageView
        android:id="@+id/home_background_iv"
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:src="@drawable/img_default_4_x_1"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!--제목 텍스트와 플레이버튼-->
    <TextView
        android:id="@+id/home_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="운동할 때 듣는 신나는 댄스"
        android:textColor="#ffffff"
        android:textSize="26dp"
        android:textStyle="bold"
        android:layout_marginTop="60dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/home_btn_play_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/btn_panel_play_large"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!--좌측 하단 exp-->
    <TextView
        android:id="@+id/home_album_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="총 23곡 2021.08.06"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/home_album_exp1_iv" />
    <ImageView
        android:id="@+id/home_album_exp1_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/img_album_exp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/home_album_exp2_iv"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:id="@+id/home_album_exp1_text_01_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Butter"
        android:textColor="#ffffff"
        android:textSize="13sp"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/home_album_exp1_iv"
        app:layout_constraintTop_toTopOf="@+id/home_album_exp1_iv"
        app:layout_constraintBottom_toTopOf="@id/home_album_exp1_text_02_tv"/>
    <TextView
        android:id="@+id/home_album_exp1_text_02_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="방탄소년단"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/home_album_exp1_iv"
        app:layout_constraintBottom_toBottomOf="@+id/home_album_exp1_iv"
        app:layout_constraintTop_toBottomOf="@id/home_album_exp1_text_01_tv"
        />
    <ImageView
        android:id="@+id/home_album_exp2_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/img_album_exp2"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/home_background_iv"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:id="@+id/home_album_exp2_text_01_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="라일락"
        android:textColor="#ffffff"
        android:textSize="13sp"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/home_album_exp2_iv"
        app:layout_constraintTop_toTopOf="@+id/home_album_exp2_iv"
        app:layout_constraintBottom_toTopOf="@id/home_album_exp2_text_02_tv"/>
    <TextView
        android:id="@+id/home_album_exp2_text_02_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이유(IU)"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/home_album_exp2_iv"
        app:layout_constraintBottom_toBottomOf="@+id/home_album_exp2_iv"
        app:layout_constraintTop_toBottomOf="@id/home_album_exp2_text_01_tv"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>